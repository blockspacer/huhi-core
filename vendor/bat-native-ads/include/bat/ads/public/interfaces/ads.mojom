module ads.mojom;

enum HuhiAdsEnvironment {
  STAGING = 0,
  PRODUCTION,
  DEVELOPMENT
};

struct HuhiAdsBuildChannel {
  bool is_release;
  string name;
};

enum HuhiAdsAdType {
  kUndefined = 0,
  kAdNotification,
  kNewTabPageAd
};

enum HuhiAdsAdNotificationEventType {
  kViewed = 0,
  kClicked,
  kDismissed,
  kTimedOut
};

enum HuhiAdsNewTabPageAdEventType {
  kViewed = 0,
  kClicked
};

enum HuhiAdsUrlRequestMethod {
  GET = 0,
  PUT,
  POST
};

enum HuhiAdsP2AEventType {
  kListType = 0
};

struct HuhiAdsUrlRequest {
  string url;
  array<string> headers;
  string content;
  string content_type;
  HuhiAdsUrlRequestMethod method;
};

struct HuhiAdsUrlResponse {
  string url;
  int32 status_code;
  string body;
  map<string, string> headers;
};
