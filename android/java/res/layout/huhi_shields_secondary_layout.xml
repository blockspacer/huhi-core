<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/huhi_shields_secondary_layout"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:visibility="gone">

	<TextView
		android:id="@+id/huhi_shields_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingStart="16dp"
		android:paddingTop="16dp"
		android:layout_marginTop="4dp"
		android:layout_marginBottom="4dp"
		android:singleLine="true"
        android:ellipsize="end"
		android:textSize="16sp"
		android:fontFamily="sans-serif"
		android:textStyle="bold"
		android:textColor="@color/shield_text_color" />

	<include 
		android:id="@+id/huhi_shields_block_trackers_id"
		layout="@layout/huhi_shields_switcher"/>
	<include 
		android:id="@+id/huhi_shields_upgrade_https_id"
		layout="@layout/huhi_shields_switcher"/>
	<include 
		android:id="@+id/huhi_shields_block_scripts_id"
		layout="@layout/huhi_shields_switcher"/>

	<include 
		android:id="@+id/huhi_shields_cookies_layout_id"
		layout="@layout/huhi_shields_toggle_layout"/>

	<include 
		android:id="@+id/huhi_shields_fingerprinting_layout_id"
		layout="@layout/huhi_shields_toggle_layout"/>

</LinearLayout>